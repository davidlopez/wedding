<div class="h-full flex flex-col justify-center">
  <div class="w-11/12 md:w-auto mx-auto text-center flex flex-col gap-6 bg-white justify-center px-8 py-12 rounded-lg text-gray-800 font-semibold border-opacity-5">
    <% flash.each do |type, msg| %>
      <div class="underline decoration-red-500">
        <%= msg %>
      </div>
    <% end %>
    <h1 class="text-2xl">Please enter the code provided on your invite.</h1>

    <%= form_with url: '/rsvp', method: :get do |form| %>
      <%= form.text_field :invite_code, placeholder: "Invite Code", class: "w-1/2 mb-3 md:mb-0 md:w-1/3 mx-6 border-4 border-opacity-10 p-2 border-gray-800 rounded-lg text-center"%>
      <%= form.submit "Let's Go!", class: "bg-gray-800 text-white p-3 rounded-lg" %>
    <% end %>
  </div>
</div>